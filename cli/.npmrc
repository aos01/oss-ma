# Security: never execute install scripts from dependencies automatically
ignore-scripts=true

# Always audit on install
audit=true

# Do not show funding messages
fund=false

# Enforce lockfile — never update package-lock.json silently
save-exact=false
package-lock=true

# Registry explicite — à remplacer par votre registry interne en air-gapped
registry=https://registry.npmjs.org/
